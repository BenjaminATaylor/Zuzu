process.container = 'docker://benjaminataylor/zuzu:latest'

process {
    withLabel: small_job {
        cpus = 1
        memory = '50 MB'
        time = '5m'
    }
    withLabel: mid_job {
        cpus = 1
        memory = '5 GB'
        time = '1h'
    }
    withLabel: big_job {
        cpus = 10
        memory = '15 GB'
        time = '1d'
    }
}